<% layout('layouts/boilerplate')%>

<center><h1 class="text-light">All Books</h1></center>
<div class="mb-3">
    <a class="btn btn-primary" href="/books/new">Add Book</a>
</div>
<% for (let book of books){%>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid mt-2 ml-2 mr-2 mb-2" alt="" src="<%=book.images[0].url%>" width="300" height="300" >
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= book.title %> </h5>
                <!-- <p class="card-text"><%= book.description %></p> -->
                <p class="card-text">
                    <small class="text-muted"><%= book.location%></small>
                </p>
                <a class="btn btn-primary" href="/books/<%=book._id%>">View <%=book.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>